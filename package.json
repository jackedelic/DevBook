{
  "name": "devbook",
  "version": "1.0.0",
  "description": "Social networking site for developers",
  "main": "server.js",
  "author": "Jack Wong",
  "license": "MIT",
  "scripts": {
    "test": "mocha --timeout 30000 --exit",
    "start": "NPM_USE_PRODUCTION=false npm install --prefix client && npm run build --prefix client && node server",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "gcp-build": "npm install --prefix client && npm run build --prefix client && rm -Rf ./client/node_modules",
    "heroku-postbuild": "npm install --prefix client && npm run build --prefix client"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "config": "^3.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.18.2",
    "express-validator": "^6.5.0",
    "gravatar": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.18",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "concurrently": "^5.2.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4"
  }
}
